<UserControl x:Class="XFDesignDemo.Views.BasicControls.SliderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XFDesignDemo.Views.BasicControls"
             xmlns:xf="https://github.com/Coast/XFDesign"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="4" Columns="4">
        <Slider VerticalAlignment="Center" Margin="20 0" Value="3" Maximum="10" Style="{StaticResource CornerSlider}"/>
        <Slider Orientation="Vertical" HorizontalAlignment="Center" Margin="20 0" Value="3" Maximum="10" Style="{DynamicResource CornerSlider}"/>
    </UniformGrid>
</UserControl>
